{
  "name": "knifecycle",
  "version": "2.1.1",
  "description": "Manage your NodeJS processes's lifecycle.",
  "main": "dist/index.js",
  "engines": {
    "node": ">=6.9.5"
  },
  "metapak": {
    "data": {
      "files": "src/*.js",
      "testsFiles": "src/*.mocha.js"
    },
    "configs": [
      "babel",
      "jsdocs",
      "jsarch",
      "readme"
    ]
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "architecture": "jsarch src/*.js > ARCHITECTURE.md",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "cli": "env NODE_ENV=${NODE_ENV:-cli}",
    "compile": "babel src --out-dir=dist",
    "cover": "istanbul cover _mocha --report html -- --compilers js:babel-register src/*.mocha.js -R spec -t 5000",
    "coveralls": "istanbul cover _mocha --report lcovonly -- --compilers js:babel-register src/*.mocha.js -R spec -t 5000 && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "cz": "env NODE_ENV=${NODE_ENV:-cli} git cz",
    "doc": "mkdir -p .readme; echo \"# API\" > .readme/API.md; jsdoc2md src/*.js >> .readme/API.md",
    "lint": "eslint src/*.js",
    "metapak": "metapak || echo 'Please `npm install --save-dev metapak`' && exit 0",
    "postinstall": "npm run metapak --silent",
    "prepublish": "npm run compile",
    "preversion": "npm t && npm run lint && npm run compile",
    "test": "mocha --compilers js:babel-register src/*.mocha.js",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "keywords": [
    "process",
    "lifecycle",
    "shutdown",
    "service"
  ],
  "author": "Nicolas Froidure",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-eslint": "^7.1.0",
    "babel-plugin-transform-async-to-module-method": "^6.8.0",
    "babel-plugin-transform-decorators": "^6.8.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-systemjs": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.2.0",
    "coveralls": "2.11.15",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "3.16.0",
    "eslint-config-simplifield": "4.1.1",
    "istanbul": "^1.0.0-alpha.2",
    "jsarch": "1.2.1",
    "jsdoc-to-markdown": "^3.0.0",
    "metapak": "0.0.20",
    "metapak-nfroidure": "0.6.0",
    "mocha": "3.2.0",
    "mocha-lcov-reporter": "1.3.0",
    "sinon": "^2.0.0"
  },
  "dependencies": {
    "debug": "2.6.1",
    "yerror": "^2.0.0"
  },
  "greenkeeper": {
    "ignore": [
      "debug",
      "eslint",
      "eslint-config-simplifield",
      "mocha",
      "mocha-lcov-reporter",
      "commitizen",
      "cz-conventional-changelog",
      "coveralls",
      "istanbul",
      "conventional-changelog-cli",
      "jsarch",
      "jsdoc-to-markdown"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
