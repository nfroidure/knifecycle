{
  "name": "knifecycle",
  "version": "2.4.1",
  "description": "Manage your NodeJS processes's lifecycle.",
  "main": "dist/index.js",
  "engines": {
    "node": ">=6.9.5"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "architecture": "jsarch src/*.js > ARCHITECTURE.md",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "cli": "env NODE_ENV=${NODE_ENV:-cli}",
    "compile": "babel src --out-dir=dist",
    "cover": "istanbul cover _mocha --report html -- --compilers js:babel-register src/*.mocha.js -R spec -t 5000",
    "coveralls": "istanbul cover _mocha --report lcovonly -- --compilers js:babel-register src/*.mocha.js -R spec -t 5000 && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "cz": "env NODE_ENV=${NODE_ENV:-cli} git cz",
    "doc": "mkdir -p .readme; echo \"# API\" > .readme/API.md; jsdoc2md src/*.js >> .readme/API.md",
    "lint": "eslint src/*.js",
    "prepublish": "npm run compile",
    "preversion": "npm t && npm run lint && npm run compile",
    "test": "mocha --compilers js:babel-register src/*.mocha.js && karma start karma.conf.js",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "keywords": [
    "process",
    "lifecycle",
    "shutdown",
    "service"
  ],
  "author": "Nicolas Froidure",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-eslint": "^7.1.0",
    "babel-plugin-transform-async-to-module-method": "^6.24.1",
    "babel-plugin-transform-es2015-modules-systemjs": "^6.9.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.9.0",
    "browserify": "^14.4.0",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.2.0",
    "coveralls": "2.11.15",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "3.16.0",
    "eslint-config-simplifield": "4.1.1",
    "istanbul": "^1.0.0-alpha.2",
    "jsarch": "1.2.2",
    "jsdoc-to-markdown": "^3.0.0",
    "karma": "^1.7.0",
    "karma-browserify": "^5.1.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "^1.1.0",
    "mocha": "3.2.0",
    "mocha-lcov-reporter": "1.3.0",
    "sinon": "^3.0.0"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "yerror": "^2.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
